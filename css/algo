                                   probleme4
 ALGORITHME Suites
 {...................................................}
 DEBUT
    VARIABLES n, Un : ENTIERS                                  
    ECRIRE("entrez un entier naturel svp:")
    LIRE(n)
    SI n>0
    ALORS
    SELON(n)
     CAS0 : ECRIRE ("Un=2")
     CAS1 :ECRIRE("Un=-1")
     CAS2 :ECRIRE("Un=0")
     CAS3 :ECRIRE("Un=4")
     DEFAUT 
       SI(n%2==0)
       ALORS
        ECRIRE ("U",n,"=1")
       SINON 
        ECRIRE("U",n,"=-1")
       FINSI
    FINSELON
    SINON
    ECRIRE("valeur incorrecte!")
    FINSI
    FIN      
